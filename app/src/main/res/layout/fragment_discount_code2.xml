<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forgot_background"
    tools:context=".ui.fragment.DiscountCode">


    <com.example.fontutil.TextViewCustomFont
        android:id="@+id/textView"
        style="@style/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimension24"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="@dimen/dimension24"
        android:text="ادخال كود الخصم"
        app:font_name="@string/VIP_Rawy_Bold_Bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.fontutil.TextViewCustomFont
        android:id="@+id/textView2"
        style="@style/login_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimension24"
        android:layout_marginTop="@dimen/dimension8"
        android:layout_marginEnd="@dimen/dimension24"
        android:text="أخصل على خصومات مميزة بادخال كود الخصم اسفله"
        app:font_name="@string/VIP_Rawy_Regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.github.glomadrian.codeinputlib.CodeInput
        android:id="@+id/CodeInput_ForgotPass"
        android:layout_width="@dimen/dimension182"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        app:codes="5"
        app:hint_color="@android:color/transparent"
        app:hint_text="Pin code"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:text_color="#ff09cac3"
        app:underline_color="@color/hintColor"
        app:underline_selected_color="#ff09cac3" />

    <com.example.fontutil.ButtonCustomFont
        android:id="@+id/BTN_GetYourDiscount"
        style="@style/login_btn"
        android:layout_width="@dimen/dimension0"
        android:layout_height="@dimen/dimension50"
        android:layout_marginStart="32dp"
        android:layout_marginTop="@dimen/dimension16"
        android:layout_marginEnd="32dp"
        android:background="@drawable/login_btn"
        android:text="أحصل على الخصم"
        app:font_name="@string/VIP_Rawy_Bold_Bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CodeInput_ForgotPass" />

</android.support.constraint.ConstraintLayout>